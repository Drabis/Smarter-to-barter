<h2 class="card-header">Services</h2>
            <div class="card-group">
                {{#each services as |service|}}
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">{{service.name}}</h5>
                    <p class="card-text">{{service.description}}</p>
                    <p class="card-text">{{service.user.name}}</p>
                    <p class="card-text">{{service.user.email}}</p>
                    {{!-- {{#if logged_in}} --}}
                    <a href="/offer/{{service.id}}"><button>Make an Offer</button></a>
                    {{!-- {{/if}} --}}
                  </div>
                </div>

                {{/each}}
                </div>
