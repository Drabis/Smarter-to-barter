<section class="row">
    <div class="column">
        <h2>Create Service</h2>

        <form class="new-service-form">
            <div>
                <label for="service-title">Title</label>
                <input type="text" id="service-title" name="service-title" />
            </div>
            <div>
                <label for="service-text">Service</label>
                <textarea id="service-text" name="service-text"></textarea>
            </div>
            <button type="submit" class="btn">Create</button>
        </form>
    </div>
    <div class="column">
        {{!-- <h2>About Me</h2>
        <h2>Email Address</h2> --}}
        {{user.email}}
        {{!-- {{> user-info}} --}}
    </div>

</section>

{{#if services.length}}
<section>
    <h2>Your Services</h2>
    <ol>
        {{#each services as |service|}}
        <li>
        <p>
            {{service.name}}
            <a href="/profile/edit/{{service.id}}" class="edit-link">Edit Service</a>
         </p>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<h2 class="card-header">Outgoing Offers</h2>
<div class="card-group">
    {{#each serviceOffered}}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{this.id}}</h5>
            <p class="card-text">{{this.service.description}}</p>
            <p class="card-text">{{this.user.name}}</p>
            <p class="card-text">{{offer.user.email}}</p>
            <p class="card-text">{{this.status}}</p>

            <button data-offer={{offer.id}} value='accepted' class='offer-response'>Cancel</button>
                {{!-- <button data-offer={{offer.id}} value='accepted' class='offer-response'>Edit The Offer</button> --}}
            {{!-- <button data-offer={{offer.id}} value='rejected' class='offer-response'>Reject The Offer!</button> --}}
        </div>
    </div>

    {{/each}}

    <h2 class="card-header">Incoming Offers</h2>
    <div class="card-group">
        {{#each serviceRequested}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.service.name}}</h5>
                <p class="card-text">{{this.service.description}}</p>
                <p class="card-text">{{this.user.name}}</p>
                <p class="card-text">{{offer.user.email}}</p>
                <p class="card-text">{{offer.status}}</p>

                <button data-offer={{offer.id}} value='accepted' class='offer-response'>Accept</button>
                <button data-offer={{offer.id}} value='accepted' class='offer-response'>Reject</button>
                {{!-- <button data-offer={{offer.id}} value='rejected' class='offer-response'>Reject The Offer!</button>
                --}}
            </div>
        </div>

        {{/each}}
</div>




